{
    "name": "recruitment/football-events",
    "description": "Simple football events tracking application",
    "type": "project",
    "require": {
        "php": ">=8.4",
        "doctrine/doctrine-bundle": "^3.2",
        "doctrine/orm": "^3.6",
        "ramsey/uuid": "^4.7",
        "symfony/dotenv": "7.2.*",
        "symfony/flex": "^2.10",
        "symfony/framework-bundle": "^7.2",
        "symfony/messenger": "7.2.*",
        "symfony/property-access": "7.2.*",
        "symfony/runtime": "^7.2",
        "symfony/serializer": "7.2.*",
        "symfony/validator": "7.2.*",
        "symfony/yaml": "7.2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "cs:check": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "cs:fix": "vendor/bin/php-cs-fixer fix",
        "phpstan": "vendor/bin/phpstan analyse",
        "lint": [
            "@cs:check",
            "@phpstan"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.2.*"
        }
    }
}
